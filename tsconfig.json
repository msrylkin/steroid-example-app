{
  "compilerOptions": {
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": false,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "experimentalDecorators": true,
    "allowJs": false,
    "inlineSources": true,
    "sourceRoot": "/"
  }
}